<div>
    
    @if(!User.IsInRole("Empleado")){
        <a asp-action="Index">Back to List</a>
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    }else{
        <a asp-action="PersonalEdit" asp-route-id="@Model?.Id">Edit</a>
    }
    
</div>
