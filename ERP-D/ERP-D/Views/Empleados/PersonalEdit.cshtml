@model ERP_D.ViewModels.Empleados.PersonalEdit

@{
    ViewData["Title"] = "Edit";
}
<div class="form">
<h4>Empleado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PersonalEdit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NombreFoto" class="control-label"></label>
                <input asp-for="NombreFoto" class="form-control" />
                <span asp-validation-for="NombreFoto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoTelefono" class="control-label"></label>
                <select asp-for="TipoTelefono" class="form-control" asp-items="@Html.GetEnumSelectList<TipoTelefono>()">
                    <option value="">Selecciona el tipo de telefono</option>
                </select>
                <span asp-validation-for="TipoTelefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroTelefono" class="control-label"></label>
                <input asp-for="NumeroTelefono" class="form-control" />
                <span asp-validation-for="NumeroTelefono" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Foto" class="control-label"></label>
                <input asp-for="Foto" image="image/*" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Aceptar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
