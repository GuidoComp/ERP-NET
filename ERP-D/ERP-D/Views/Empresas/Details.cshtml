@model ERP_D.Models.Empresa

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>

    <h4>Empresa</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rubro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rubro)
        </dd>
        @if (ViewBag.GerenciaGeneral != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GerenciaGeneral)
            </dt>
            <dd class="col-sm-10">
                @ViewBag.GerenciaGeneral
            </dd>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Logo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Logo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<div>
    <hr />
    <h5>@Html.DisplayNameFor(model => model.Gerencias)</h5>
    <dl>
        @if (!Model.Gerencias.Any())
        {
            <p class="badge bg-info">No hay gerencias asociadas a esta empresa</p>
        }
        else
        {
            @foreach (var item in Model.Gerencias)
            {
                <a asp-controller="Gerencias" asp-action="Details" asp-route-id="@item.Id" class="badge bg-warning">@item.Nombre</a>
            }
        }
    </dl>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
