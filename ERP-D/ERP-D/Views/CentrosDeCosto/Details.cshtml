@model ERP_D.Models.CentroDeCosto

@{
    ViewData["Title"] = "Details";
}

<div class="form">
    <div>
        <h4>Detalles @Model.Nombre</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.MontoMaximo)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.MontoMaximo)
            </dd>
            <dt class="col-sm-2">
                Total Acumulado
            </dt>
            <dd class="col-sm-10">
                @ViewBag.TotalAcumulado
            </dd>
        </dl>
    </div>
    <div>
        <hr />
        <h5>@Html.DisplayNameFor(model => model.Gastos)</h5>
        <dl>
            @if (!Model.Gastos.Any())
            {
                <p class="badge bg-warning">No hay gastos para este centro de costos</p>
            }
            else
            {
                <table class="table custom-table">
                    <thead>
                        <tr class="header-border">
                            <th>Descripcion</th>
                            <th>Empleado</th>
                            <th>Monto</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.Gastos)
                    {
                        <tr>
                            <td>@item.Descripcion</td>
                            <td>@item.Empleado.Nombre</td>
                            <td>@item.Monto</td>
                        </tr>
                    }
                    </tbody>
                </table>

            }

        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
        <a asp-action="Index">Volver</a>
    </div>
</div>
